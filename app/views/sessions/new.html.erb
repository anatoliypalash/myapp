<%= form_tag sessions_path, :class => 'form-signin' do %>
<h2 class="form-signin-heading">Log in</h2>
  <p>
    <%= text_field_tag :email, params[:email], :placeholder => "Email Address", :class => "form-control" %>
  </p>
  <p>
    <%= password_field_tag(:password, "", placeholder: "Password", :class => "form-control" ) %>
  </p>
  <p class="button"><%= submit_tag("Log in", :id=>"button", :class=>"btn btn-lg btn-primary btn-block", :name=>"submit") %></p>
  <hr>
  <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in"  %>

<% end %>
